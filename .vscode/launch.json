{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver",
                "9000"
            ],
            "django": true,
            "autoStartBrowser": true,
            "program": "${workspaceFolder}\\manage.py"
        },
        {
            "name": "Django: Dev Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000",
                "--noreload"
            ],
            "django": true,
            "justMyCode": false,
            "env": {
                "DJANGO_SETTINGS_MODULE": "storefront.settings.dev"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Django: Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "-s"
            ],
            "django": true,
            "justMyCode": false,
            "env": {
                "DJANGO_SETTINGS_MODULE": "storefront.settings.test"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Django: Waitress Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/conf/waitress_config.py",
            "django": true,
            "justMyCode": false,
            "env": {
                "DJANGO_SETTINGS_MODULE": "storefront.settings.prod"
            },
            "console": "integratedTerminal"
        }
    ]
}
